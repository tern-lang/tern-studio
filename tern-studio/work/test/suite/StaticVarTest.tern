import test.TestCase;

class StaticVar {
   static const PI = 3.14;
   static const circle = new Circle(PI);
   static var count = 0;
   static inc(){
      return count++;
   }
}

class Circle {
   static const X = 11;
   static const Y = 334;
   const point = new Point(X, Y);
   var pi;
   new(pi){
      this.pi = pi;
      System.err.println("pi="+pi);
   }
}

class Point {
   var x;
   var y;

   new(x, y){
     this.x = x;
     this.y = y;
   }
}

class StaticVarTest with TestCase {

   testStaticVariables() {
      println("static="+StaticVar.PI);
      println(StaticVar.inc());   
      println(StaticVar.inc());
      println(StaticVar.inc());
   }
}
