import test.TestCase;

enum Color{
   RED,
   GREEN,
   BLUE;
}
abstract class Shape{
   const id;
   new(id){
      this.id=id;
   }
   abstract draw(c: Canvas);
}
class Circle extends Shape{
   const color;
   const radius;
   new(id, radius):this(id, radius, Color.RED){}
   new(id, radius, color):super(id){
      this.radius=radius;
      this.color=color;
   }
   draw(c:Canvas){
      println("Circle ${radius} ${color}");
   }
}

trait Canvas{
}

class ConstructorTest with TestCase {

   testConstructor(){
      const circle = new Circle("a", 11);
      assert circle.id == "a";
      assert circle.radius == 11;
      assert circle.color == Color.RED;
      circle.draw(null);
   }
}
