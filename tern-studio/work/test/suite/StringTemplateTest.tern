import test.TestCase;

class SomeObject {
   var x;
   var y;
   new(x,y){
      this.x=x;
      this.y=y;
   }
   toString(){
      return "(${x},${y})";
   }
}

class StringTemplateTest with TestCase {

   testTemplate(){
      var a = 1;
      var b = 2;
      var c = "x";
      
      assert "${a}" == "1";
      assert "${a}" == '1';
      assert "${a+b}" == '3';
      assert "${a+b" == '${a+b';
      assert "${a}${c}" == '1x';
      assert '${a}' == '${a}';
      assert '${a+b}' == '${a+b}';
   }
   
   testTemplateWithObject() {
      var x = 1;
      var y = 2;
      var object = new SomeObject(x,y);
      
      assert "${object.x}" == "1";
      assert "${object.y}" == "2";
      assert "${object}" == "(1,2)";
      assert "x=${x} object=${object}" == "x=1 object=(1,2)";
      assert "${new SomeObject(5,6)}" == "(5,6)";
   }
}
