
class Clock extends SpecialElement {

   // maximum duration to display clock in snake moves
   static const MAX_DURATION = 20;

   // effect duration in seconds
   static const EFFECT_DURATION = 10;

   new(fieldDimensions, snake, radius) :super(fieldDimensions, snake, radius, MAX_DURATION){
      this.type = GameElementType.CLOCK;

      println("Clock created");
   }

   static getEffectDuration() {
      return EFFECT_DURATION;
   }
}

