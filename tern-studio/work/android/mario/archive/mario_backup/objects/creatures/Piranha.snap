import mario.core.MarioResourceManager;
import mario.core.MarioSoundManager;
import mario.core.animation.Animation;
import mario.core.tile.TileMap;
import mario.objects.base.Creature;
import android.graphics.Bitmap;
import android.graphics.Canvas;
import android.graphics.Rect;





class Piranha extends Creature {
   
   private static var p1: Bitmap;
   private static var p2: Bitmap;
   public static var turn: Animation ;
   private static var initialized: Boolean = false;

   var dy: Float=0.3f;
   var y1: Float=0f;
   var initY: Float=0f;
   static var wait: Integer=0;
   public new(pixelX: Integer, pixelY: Integer, soundManager: MarioSoundManager): super(pixelX, pixelY,soundManager) {
      if (!initialized) {
         p1 =  MarioResourceManager.Piranha_1;
         p2 =  MarioResourceManager.Piranha_2;
         initialized = true;
      }
      
      turn = new Animation(200).addFrame(p1).addFrame(p2);
      setAnimation(turn);
      dy= 0.5f;
      initY=pixelY;
      setOffsetX(-3);
   }
   
   public override draw(g: Canvas, x: Integer, y: Integer) {
      g.drawBitmap(currentAnimation().getImage(),
         new Rect(0,0,getWidth(),getHeight()-Math.floor(y1)),
         new Rect(x+getOffsetX() , y+getOffsetY(),x +getWidth()+getOffsetX(),y+getOffsetY() +  getHeight()-Math.floor(y1)),null);
   }
   
   public override updateCreature(map: TileMap, time: Integer) {
      if (wait>0){
         wait--;
         return;
      }
      super.update(time);
      y1=y1+dy;
      if (y1 >getHeight()){
         y1=getHeight();
         dy=-Math.abs(dy);
         wait=75;
      }else if (y1<0){
         y1=0;
         dy=Math.abs(dy);
      }
      y=initY+y1;
      //setOffsetY(getOffsetY()+1); 
   }
   
   public flip() {
      kill();
   }
}

