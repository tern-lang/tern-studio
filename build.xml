<?xml version="1.0" encoding="UTF-8"?>
<project> 
   <property file="build.properties"/>
   <echo message="${build.version}"/>
   <echo message="${maven.home}"/>
   <echo message="${java.home}"/>
   <echo message="${ant.home}"/>
   <exec executable="${maven.home}\bin\mvn.cmd">
      <arg value="clean" />
      <arg value="install" />
      <arg value="-DskipTests" />
   </exec>
   <delete file="../snap-site/www.ternscript.org/download/snapd.jar" />
   <copy file="snap-studio/target/snapd.jar" tofile="../snap-site/www.ternscript.org/download/snapd.jar" overwrite="true" />
   <exec executable="${ant.home}\bin\ant.bat">
      <arg value="-f" />
      <arg value="snap-studio-agent\build.xml" />
   </exec>
   <delete file="../snap-site/www.ternscript.org/download/snap.jar" />
   <copy file="snap-studio-agent/target/snap-studio-agent-${build.version}-jar-with-dependencies.jar" tofile="../snap-site/www.ternscript.org/download/snap.jar" overwrite="true" />
   <exec executable="${java.home}\bin\java.exe">
      <arg value="-agentlib:jdwp=transport=dt_socket,server=y,address=8111,suspend=n"/>
      <arg value="-jar" />
      <arg value="../snap-site/www.ternscript.org/download/snapd.jar" />
      <arg value="--directory=snap-studio\work" />
      <arg value="--port=4457"/>
      <arg value="--log-level=INFO"/>  
      <arg value="--agent-pool=6"/>
      <arg value="--server-only=false"/> 
   </exec>        
</project>
